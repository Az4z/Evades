local scriptName = "Universal Desync"
local rawUrl = "https://rawscripts.net/raw/Universal-Script-Universal-desync-open-source-LEAK-83942"

print("--- Iniciando carregamento do: " .. scriptName .. " ---")

-- Função para carregar o script com tratamento de erros
local function LoadExternalScript()
    local success, content = pcall(function()
        return game:HttpGet(rawUrl)
    end)

    if success and content then
        -- Se o download do código deu certo, tenta executar
        local executeSuccess, err = pcall(function()
            loadstring(content)()
        end)

        if executeSuccess then
            print("--- " .. scriptName .. " carregado com sucesso! ---")
        else
            warn("Erro na execução do script: " .. tostring(err))
        end
    else
        warn("Erro ao baixar o código do link. Verifique sua conexão ou se o link caiu.")
    end
end

LoadExternalScript()
